{% extends 'base_backoffice.html.twig' %}

{% block contenu %}
    <h1 class="text-center titretable"">Equipe</h1>
        <div class="container">
                <table class="table table-striped table-bordered table-condensed ">
                    <tbody>
                        <tr>
                            <th class="thtable2 text-center">N°</th>
                            <td class="tdtable2">{{ equipe.id }}</td>
                        </tr>
                        <tr>
                            <th class="thtable2 text-center">Nom équipe</th>
                            <td class="tdtable2">{{ equipe.nomEquipe }}</td>
                        </tr>
                        <tr>
                            <th class="thtable2 text-center">Laboratoire</th>
                            <td class="tdtable2">{{ equipe.laboratoire }}</td>
                        </tr>
                        <tr>
                            <th class="thtable2 text-center">Rue</th>
                            <td class="tdtable2">{{ equipe.rue }}</td>
                        </tr>
                        <tr>
                            <th class="thtable2 text-center">Cp</th>
                            <td class="tdtable2">{{ equipe.cp }}</td>
                        </tr>
                        <tr>
                            <th class="thtable2 text-center">Ville</th>
                            <td class="tdtable2">{{ equipe.ville }}</td>
                        </tr>
                        <tr>
                            <th class="thtable2 text-center">Code unité</th>
                            <td class="tdtable2">{{ equipe.codeUnite }}</td>
                        </tr>
                        <tr>
                            <th class="thtable2 text-center">Tutelle</th>
                            <td class="tdtable2">{{ equipe.tutelle }}</td>
                        </tr>
                        <tr>
                            <th class="thtable2 text-center">Site web de l'équipe</th>
                            <td class="tdtable2">{{ equipe.siteWebEquipe }}</td>
                        </tr>
                        <tr>
                            <th class="thtable2 text-center">Site web du laboratoire</th>
                            <td class="tdtable2">{{ equipe.siteWebLabo }}</td>
                        </tr>
                        <tr>
                            <th class="thtable2 text-center">Nom référent</th>
                            <td class="tdtable2">{{ equipe.nomReferent }}</td>
                        </tr>
                        <tr>
                            <th class="thtable2 text-center">Prénom référent</th>
                            <td class="tdtable2">{{ equipe.prenomReferent }}</td>
                        </tr>
                        <tr>
                            <th class="thtable2 text-center">Email référent</th>
                            <td class="tdtable2">{{ equipe.emailReferent }}</td>
                        </tr>
                        <tr>
                            <th class="thtable2 text-center">Telephone référent</th>
                            <td class="tdtable2">{{ equipe.telephoneReferent }}</td>
                        </tr>
                        <tr>
                            <th class="thtable2 text-center">Recherche</th>
                            <td class="tdtable2">{{ equipe.recherche }}</td>
                        </tr>
                        <tr>
                            <th class="thtable2 text-center">Projet</th>
                            <td class="tdtable2">{{ equipe.projet }}</td>
                        </tr>
                        <tr>
                            <th class="thtable2 text-center">Description de l'équipe</th>
                            <td class="tdtable2">{{ equipe.descriptionEquipe }}</td>
                        </tr>
                        <tr>
                            <th class="thtable2 text-center">Logo</th>
                            <td class="tdtable2">
                                <div class="equipeDetailLogo">
                                    <img class="img-responsive" src="{{ asset('images/logos_equipes/'~equipe.logo) }}" alt="">
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <th class="thtable2 text-center">Mots Clés</th>
                            <td class="tdtable2">
                                {% for key, keywords in equipe.keywordsEquipe %}
                                    {{ keywords.keyword }}
                                {% endfor %}
                            </td>
                        </tr>
                    </tbody>
                </table>
        </div>
        <ul class="list-inline text-center">
            <li>
                <a class="btn btn-default btn-lg btnForm" href="{{ path('equipe_index') }}">Retourner à la liste</a>
            </li>
            <li>
                <a class="btn btn-success btn-lg btnForm" href="{{ path('equipe_edit', { 'id': equipe.id }) }}">Editer</a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                    <button type="submit" class="btn btn-danger btn-lg btnForm">Supprimer</button>
                {{ form_end(delete_form) }}
            </li>
        </ul>
{% endblock %}
