{% extends 'base_backoffice.html.twig' %}

{% block contenu %}
    <div class="container">
        <h1 class="titretable">Liste des équipes</h1>
        <div class="row">
            <div class="col-lg-offset-1 col-lg-10 text-right">
                <a href="{{ path('equipe_new') }}"> <button type="button" class="btn btn-success btn-lg"> <h4> Créer une nouvelle équipe </h4> </button> </a>
            </div>
        </div>
        <div class="table-responsive ">
            <table class="table table-striped table-bordered table-condensed ">
                <thead>
                    <tr>
                        <th class="thtable">Id</th>
                        <th class="thtable">Nom de l'équipe</th>
                        <th class="thtable">Nom référent</th>
                        <th class="thtable">Prenom référent</th>
                        <th class="thtable ">Email référent</th>
                        <th class="thtable">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for equipe in equipes %}
                    <tr>
                        <td class="tdtable">{{ equipe.id }}</td>
                        <td class="tdtable">{{ equipe.nomEquipe }}</td>
                        <td class="tdtable">{{ equipe.nomReferent }}</td>
                        <td class="tdtable">{{ equipe.prenomReferent }}</td>
                        <td class="tdtable ">{{ equipe.emailReferent }}</td>
                        <td class="tdtable puces">
                            <ul>
                                <li class="puceaenlever">
                                     <a class="colorInherit"  href="{{ path('equipe_show', { 'id': equipe.id }) }}"><i class="fa fa-file-text-o fa-2x" aria-hidden="true"></i></a>
                                </li>
                                <li class="puceaenlever ">
                                     <a class="colorInherit"  href="{{ path('equipe_edit', { 'id': equipe.id }) }}"><i class="fa fa-pencil fa-2x" aria-hidden="true"></i></a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
