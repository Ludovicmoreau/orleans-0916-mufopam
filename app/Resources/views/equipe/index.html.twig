{% extends 'base_backoffice.html.twig' %}

{% block contenu %}
    <h1 class="titretable">Liste des équipes</h1>
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-condensed">
            <thead>
                <tr>
                    <th class="thtable">Id</th>
                    <th class="thtable">Nom de l'équipe</th>
                    <th class="thtable">Nom référent</th>
                    <th class="thtable">Prenom référent</th>
                    <th class="thtable">Email référent</th>
                    <th class="thtable">Téléphone référent</th>
                    <th class="thtable">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for equipe in equipes %}
                <tr>
                    <td class="tdtable"><a href="{{ path('equipe_show', { 'id': equipe.id }) }}">{{ equipe.id }}</a></td>
                    <td class="tdtable">{{ equipe.nomEquipe }}</td>
                    <td class="tdtable">{{ equipe.nomReferent }}</td>
                    <td class="tdtable">{{ equipe.prenomReferent }}</td>
                    <td class="tdtable">{{ equipe.emailReferent }}</td>
                    <td class="tdtable">{{ equipe.telephoneReferent }}</td>
                    <td class="tdtable">
                        <ul>
                            <li class="puceaenlever">
                                 <a  href="{{ path('equipe_show', { 'id': equipe.id }) }}"><i class="fa fa-eye fa-2x" aria-hidden="true"></i></a>

                            </li>
                            <li class="puceaenlever test">
                                 <a id="equipedit" href="{{ path('equipe_edit', { 'id': equipe.id }) }}"><i class="fa fa-pencil fa-2x" aria-hidden="true"></i></a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <ul>
        <li class="creation">
            <a href="{{ path('equipe_new') }}"> <button type="button" class="btn btn-success btn-lg"> Créer une nouvelle équipe </button> </a>
        </li>
    </ul>
{% endblock %}
