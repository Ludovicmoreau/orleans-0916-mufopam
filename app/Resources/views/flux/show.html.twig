{% extends 'base_backoffice.html.twig' %}

{% block contenu %}
    <h1 class="titretable">Actualité</h1>
    <div class="container">
        <table class="table table-striped table-bordered table-condensed ">
            <tbody>
                <tr>
                    <th class="thtable2 text-center">Id</th>
                    <td class="tdtable2">{{ flux.id }}</td>
                </tr>
                <tr>
                    <th class="thtable2 text-center">Titre</th>
                    <td class="tdtable2">{{ flux.titre }}</td>
                </tr>
                <tr>
                    <th class="thtable2 text-center">Contenu</th>
                    <td class="tdtable2">{{ flux.contenu }}</td>
                </tr>
                <tr>
                    <th class="thtable2 text-center">Date de publication</th>
                    <td class="tdtable2">{% if flux.datePublication %}{{ flux.datePublication|date('Y-m-d H:i:s') }}{% endif %}</td>
                </tr>
                <tr>
                    <th class="thtable2 text-center">Type d'actualité</th>
                    <td class="tdtable2">{{ flux.typeFlux }}</td>
                </tr>
            </tbody>
        </table>
    </div>
    <ul class="boutonCenter">
        <li class="BoutonTableShow ">
            <a href="{{ path('flux_index') }}"><button type="button" class="btn btn-default btn-lg"><h4>Retourner à la liste</h4></button></a>
        </li>
        <li class="BoutonTableShow ">
            <a href="{{ path('flux_edit', { 'id': flux.id }) }}"><button type="button" class="btn btn-success btn-lg"><h4>Editer</h4></button></a>
        </li>
        <li class="BoutonTableShow ">
            {{ form_start(delete_form) }}
                <button type="submit" class="btn btn-danger btn-lg"><h4>Supprimer</h4></button>
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
