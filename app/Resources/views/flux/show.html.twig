{% extends 'base.html.twig' %}

{% block contenu %}
    <h1>Flux</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ flux.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ flux.titre }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ flux.contenu }}</td>
            </tr>
            <tr>
                <th>Datepublication</th>
                <td>{% if flux.datePublication %}{{ flux.datePublication|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Typeflux</th>
                <td>{{ flux.typeFlux }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('flux_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('flux_edit', { 'id': flux.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
