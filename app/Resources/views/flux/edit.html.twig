{% extends 'base_backoffice.html.twig' %}

{% block contenu %}
    <h1>Edition d'actualité</h1>

<div class="well">
    {{ form_start(edit_form) }}
    <div class="groupequipformulaire">
        <div class="row">
            <div class="form-group">
                {{ form_label(edit_form.titre, "Titre", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                <div class="col-sm-4">
                    {{ form_widget(edit_form.titre, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                {{ form_label(edit_form.contenu, "Contenu", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                <div class="col-sm-4">
                    {{ form_widget(edit_form.contenu, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                {{ form_label(edit_form.datePublication, "Date de publication", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                <div class="col-sm-4">
                    {{ form_widget(edit_form.datePublication, {'attr': {'class': ''}}) }}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                {{ form_label(edit_form.typeFlux, "Type flux", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                <div class="col-sm-4">
                    {{ form_widget(edit_form.typeFlux, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-offset-3">
            <div class="groupequipformulaire boutonEdit">
                <button type="submit" class="btn btn-success btn-lg"><h4>Enregistrer</h4></button>
            </div>
        </div>
    </div>
    {{ form_end(edit_form) }}
</div>

    <ul class="boutonCenter">
        <li class="BoutonTableShow">
            <a href="{{ path('flux_index') }}"><button type="button" class="btn btn-default btn-lg"><h4>Retourner à la liste</h4></button></a>
        </li>
        <li class="BoutonTableShow">
            {{ form_start(delete_form) }}
                 <button type="submit" class="btn btn-danger btn-lg"><h4>Supprimer</h4></button>
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
