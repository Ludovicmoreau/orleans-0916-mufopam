{% extends 'base_backoffice.html.twig' %}

{% block contenu %}
    <h1 class="titretable">Listes des brevets</h1>
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-condensed">
            <thead>
                <tr>
                    <th class="thtable">Id</th>
                    <th class="thtable">Brevet</th>
                    <th class="thtable">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for brevet in brevets %}
                <tr>
                    <td class="tdtable"><a href="{{ path('brevets_show', { 'id': brevet.id }) }}">{{ brevet.id }}</a></td>
                    <td class="tdtable">{{ brevet.brevet }}</td>
                    <td class="tdtable">
                        <ul>
                            <li class="puceaenlever">
                                <a href="{{ path('brevets_show', { 'id': brevet.id }) }}"><i class="fa fa-eye fa-2x" aria-hidden="true"></i></a>
                            </li>
                            <li class="puceaenlever">
                                <a href="{{ path('brevets_edit', { 'id': brevet.id }) }}"><i class="fa fa-pencil fa-2x" aria-hidden="true"></i></a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
      </div>
    <ul>
        <li class="creation">
            <a href="{{ path('brevets_new') }}"><button type="button" class="btn btn-success btn-lg"> <h3>Cr√©er une nouveau brevet</h3> </button></a>
        </li>
    </ul>
{% endblock %}
