{% extends 'base_backoffice.html.twig' %}

{% block contenu %}
    <div class="container">
        <h1 class="text-center titretable">Listes des brevets</h1>
        <div class="row">
            <div class="col-lg-offset-1 col-lg-10 text-right">
                <a class="btn btn-success btn-lg btnForm" href="{{ path('brevets_new') }}">Enregistrer un brevet</a>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-condensed tableSorter">
                <thead>
                    <tr>
                        <th class="thtable">Id</th>
                        <th class="thtable">Brevet</th>
                        <th class="thtable">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for brevet in brevets %}
                    <tr>
                        <td class="tdtable">{{ brevet.id }}</td>
                        <td class="tdtable">{{ brevet.brevet }}</td>
                        <td class="tdtable puces">
                            <ul>
                                <li class="puceaenlever">
                                    <a class="colorInherit" href="{{ path('brevets_show', { 'id': brevet.id }) }}"><i class="fa fa-file-text-o fa-2x" aria-hidden="true"></i></a>
                                </li>
                                <li class="puceaenlever">
                                    <a class="colorInherit" href="{{ path('brevets_edit', { 'id': brevet.id }) }}"><i class="fa fa-pencil fa-2x" aria-hidden="true"></i></a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
