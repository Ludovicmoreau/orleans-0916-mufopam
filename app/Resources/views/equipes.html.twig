{% extends 'base.html.twig' %}

{% block contenu  %}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-2 filtersDisplay">
            <div id="filterEquipes" class="filterCol" data-spy="" data-offset-top="">

            </div>
        </div>
        <div class="col-lg-10 equipesDisplay">
            <div class="col-lg-12 equipeRow">
                {% for equipe in equipes %}
                    <div class="col-md-4 col-lg-4 carteEquipe {{ random(['borderRed','borderBlue','borderGreen','borderOrange','borderPurple']) }}">
                        <a href="{{ path('equipe_detail', { 'id': equipe.id }) }}" target="_blank">
                            <div class="carteContent">
                                <div class="col-lg-12 topCarte">
                                    <div class="col-md-4 col-lg-4 equipeLeftCarte">
                                        <div class="col-lg-12 equipeLogo">
                                            <img class="img-responsive" src="{{ asset( '/images/logos_equipes/' ~  equipe.logo) }}" alt="logo equipe {{ equipe.nomEquipe }}">
                                        </div>
                                    </div>
                                    <div class="col-md-8 col-lg-8 equipeRightCarte">
                                        <div class="col-lg-12 equipeName text-center">
                                            <h1>{{ equipe.nomEquipe }}</h1>
                                            <p>{# equipe.equipes_keywords.keywords.keyword #}</p>
                                        </div>
                                    </div>
                                </div>
                                <div class=" col-lg-12 bottomCarte">
                                    <div class="col-md-5 col-lg-5 equipeLeftCarte">
                                        <h5>Référent de l'équipe :</h5>
                                        <ul>
                                            <li><i class="fa fa-user" aria-hidden="true"></i>{{ equipe.nomReferent }} {{ equipe.prenomReferent }}</li>
                                            <li><i class="fa fa-phone" aria-hidden="true"></i>{{ equipe.telephoneReferent }}</li>
                                            <li><a href="mailto:{{ equipe.emailReferent }}"><i class="fa fa-envelope" aria-hidden="true"></i>email du référent</a></li>
                                            <li><i class="fa fa-map-marker" aria-hidden="true"></i>{{ equipe.rue }} {{ equipe.cp }} {{ equipe.ville }}</li>
                                            <li><a href="{{ equipe.sitewebequipe }}" target="_blank"><i class="fa fa-globe" aria-hidden="true"></i>Site de l'équipe</a></li>
                                        </ul>
                                    </div>
                                    <div class="col-md-7 col-lg-7 equipeRightCarte">
                                        <p>{{ equipe.descriptionequipe }}</p>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %}