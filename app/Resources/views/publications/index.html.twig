{% extends 'base_backoffice.html.twig' %}

{% block contenu %}
    <h1>Publications list</h1>
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-condensed">
            <thead>
                <tr>
                    <th class="thtable">Id</th>
                    <th class="thtable">Doi</th>
                    <th class="thtable">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for publication in publications %}
                <tr>
                    <td class="tdtable"><a href="{{ path('publications_show', { 'id': publication.id }) }}">{{ publication.id }}</a></td>
                    <td class="tdtable">{{ publication.doi }}</td>
                    <td class="tdtable">
                        <ul>
                            <li class="puceaenlever">
                                <a href="{{ path('publications_show', { 'id': publication.id }) }}"><i class="fa fa-eye fa-2x " aria-hidden="true"></i></a>
                            </li>
                            <li class="puceaenlever">
                                <a href="{{ path('publications_edit', { 'id': publication.id }) }}"><i class="fa fa-pencil fa-2x" aria-hidden="true"></i></a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
        <ul>
            <li class="creation">
                <a href="{{ path('publications_new') }}"> <button type="button" class="btn btn-success btn-lg"> Générer une nouvelle publication </button></a>
            </li>
        </ul>
    {% endblock %}
