{% extends 'base_backoffice.html.twig' %}

{% block contenu %}
   <div class="container">
       <h1 class="text-center titretable">Liste des mots clés</h1>
       <div class="row">
           <div class="col-lg-offset-1 col-lg-10 text-right">
               <a class="btn btn-success btn-lg btnForm" href="{{ path('keywords_new') }}">Créer un mot clé</a>
           </div>
       </div>
        <div class="table-responsive ">
            <table class="table table-striped table-bordered table-condensed tableSorter">
                <thead>
                    <tr>
                        <th class="thtable">N°</th>
                        <th class="thtable">Mot clé</th>
                        <th class="thtable">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for keyword in keywords %}
                    <tr>
                        <td class="tdtable"><a href="{{ path('keywords_show', { 'id': keyword.id }) }}">{{ keyword.id }}</a></td>
                        <td class="tdtable">{{ keyword.keyword }}</td>
                        <td class="tdtable puces">
                            <ul>
                                <li class="puceaenlever">
                                    <a class="colorInherit" href="{{ path('keywords_show', { 'id': keyword.id }) }}"><i class="fa fa-file-text-o fa-2x" aria-hidden="true"></i></a>
                                </li>
                                <li class="puceaenlever">
                                    <a class="colorInherit" href="{{ path('keywords_edit', { 'id': keyword.id }) }}"><i class="fa fa-pencil fa-2x" aria-hidden="true"></i></a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
