{% extends 'base_backoffice.html.twig' %}
{% block contenu %}
    <h1>Keywords</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ keyword.id }}</td>
            </tr>
            <tr>
                <th>Keyword</th>
                <td>{{ keyword.keyword }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('keywords_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('keywords_edit', { 'id': keyword.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
