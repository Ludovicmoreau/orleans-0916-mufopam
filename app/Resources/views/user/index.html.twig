{% extends 'base_backoffice.html.twig' %}

{% block contenu %}
    <h1 class="titretable">Liste des équipes</h1>
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-condensed">
            <thead>
                <tr>
                    <th class="thtable">Id</th>
                    <th class="thtable">Nom de l'équipe</th>
                    <th class="thtable">Nom référent</th>
                    <th class="thtable">Prenom référent</th>
                    <th class="thtable">Email référent</th>
                    <th class="thtable">Téléphone référent</th>
                    <th class="thtable">Actions</th>
                </tr>
            </thead>
            <tbody>
            {{ dump(users) }}
            {% for user in users %}
                <tr>
                    <td class="tdtable"><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                    <td class="tdtable">{{ user.id}}</td>
                    <td class="tdtable">{{ user.username}}</td>
                    <td class="tdtable">
                        <ul>
                            <li class="puceaenlever">
                                 <a  href="{{ path('user_show', { 'id': user.id }) }}"><i class="fa fa-eye fa-2x" aria-hidden="true"></i></a>
                            </li>
                            <li class="puceaenlever ">
                                 <a id="userdit" href="{{ path('user_edit', { 'id': user.id }) }}"><i class="fa fa-pencil fa-2x" aria-hidden="true"></i></a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <ul>
        <li class="creation">
            <a href="{{ path('user_new') }}"> <button type="button" class="btn btn-success btn-lg"> <h3> Créer une nouvelle équipe </h3> </button> </a>
        </li>
    </ul>
{% endblock %}
