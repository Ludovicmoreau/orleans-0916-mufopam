{% extends 'base.html.twig' %}

{% block contenu  %}
<div class="equipeDetail">
    <div class="row">
        <div class="col-md-4 col-lg-4">
            <div class="col-lg-12 equipeDetailLogo">
                <img class="img-responsive" src="{{ asset( '/images/logos_equipes/' ~  equipe.logo) }}" alt="logo equipe {{ equipe.nomEquipe }}">
            </div>
            <div class="col-lg-12">
                <div class="table-responsive">
                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th class="thtable">
                                    <h3> Référent </h3>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="text-left">
                                    <li><i class="fa fa-user" aria-hidden="true"></i>{{ equipe.nomReferent }} {{ equipe.prenomReferent }}</li>
                                </td>
                            </tr>
                            <tr>
                                <td class="text-left">
                                    <li><i class="fa fa-phone" aria-hidden="true"></i>{{ equipe.telephoneReferent }}</li>
                                </td>
                            </tr>
                            <tr>
                                <td class="text-left">
                                    <li><a href="mailto:{{ equipe.emailReferent }}"><i class="fa fa-envelope" aria-hidden="true"></i>{{ equipe.emailReferent }}</a></li>
                                </td>
                            </tr>
                            <tr>
                                <td class="text-left">
                                    <li><i class="fa fa-map-marker" aria-hidden="true"></i>{{ equipe.rue }} {{ equipe.cp }} {{ equipe.ville }}</li>
                                </td>
                            </tr>
                            <tr>
                                <td class="text-left">
                                    <li><a href="{{ equipe.sitewebequipe }}" target="_blank"><i class="fa fa-globe" aria-hidden="true"></i>Site de l'équipe</a></li>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped table-condensed">
                        <thead>
                            <tr>
                                <th class="thtable">
                                    <h3>Brevets</h3>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            {#{% for brevet in equipe.brevets %}
                                <tr>
                                    <td class="text-left">
                                        {{ brevet.id }}
                                    </td>
                                    <td class="text-left">
                                        {{ brevet.brevet }}
                                    </td>
                                </tr>
                            {% endfor %}#}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="table-responsive">
                    <table class="table table-striped table-condensed">
                        <thead>
                            <tr>
                                <th class="thtable">
                                    <h3>Publications</h3>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            {#{% for publication in equipe.publications %}
                                <tr>
                                    <td class="text-left">
                                        {{ publication.id }}
                                    </td>
                                    <td class="text-left">
                                        {{ publication.doi }}
                                    </td>
                                </tr>
                            {% endfor %}#}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-8 col-lg-8">
            <div class="col-lg-12 equipeDetailTitle">
                <h1>{{ equipe.nomEquipe }}</h1>
                <p>{# equipe.equipes_keywords.keywords.keyword #}</p>
            </div>
            <div class="col-lg-12 equipeDetailResume">
                <p>{{ equipe.descriptionequipe }}</p>
            </div>
        </div>
    </div>
</div>
{% endblock %}