{% extends 'base.html.twig' %}

{% block contenu  %}
<div class="equipeDetail">
    <div class="row">
        <div class="col-md-4 col-lg-4">
            <div class="col-lg-12 equipeDetailLogo">
                <img class="img-responsive"
                     src="
                        {% if equipe.logo  %}
                            {{ asset( '/images/logos_equipes/' ~  equipe.logo) }}
                        {% else %}
                            {{ asset( '/images/logoGDR.png') }}
                        {% endif %}
                    " alt="">
            </div>
            <div class="panel-group" id="equipeAccordion" role="tablist" aria-multiselectable="true">
                <div class="col-lg-12">
                    <div class="panel panel-default panel-primary">
                        <a class="aNews" role="button" data-toggle="collapse" data-parent="#equipeAccordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                            <div class="panel-heading panelHeading" role="tab">
                                <div class="panelTop panel-title text-center">Référent</div>
                            </div>
                        </a>
                        <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
                            <div class="table-responsive">
                                <table class="table table-condensed">
                                    <tbody>
                                        <tr>
                                            <td class="text-left">
                                                <p><i class="fa fa-user" aria-hidden="true"></i>{{ equipe.nomReferent }} {{ equipe.prenomReferent }}</p>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="text-left">
                                                <p><i class="fa fa-phone" aria-hidden="true"></i>{{ equipe.telephoneReferent }}</p>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="text-left">
                                                <p><a href="mailto:{{ equipe.emailReferent }}"><i class="fa fa-envelope" aria-hidden="true"></i>{{ equipe.emailReferent }}</a></p>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="text-left">
                                                <p><i class="fa fa-map-marker" aria-hidden="true"></i>{{ equipe.rue }} {{ equipe.cp }} {{ equipe.ville }}</p>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="text-left">
                                                <p><a href="{{ equipe.sitewebequipe }}" target="_blank"><i class="fa fa-globe" aria-hidden="true"></i>Site de l'équipe</a></p>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="panel panel-default panel-primary">
                        <a class="aNews" role="button" data-toggle="collapse" data-parent="#equipeAccordion" href="#collapseTwo" aria-expanded="true" aria-controls="collapseTwo">
                            <div class="panel-heading panelHeading" role="tab" id="headingOne">
                                <div class="panelTop panel-title text-center">Mots clés</div>
                            </div>
                        </a>
                        <div id="collapseTwo" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingTwo">
                            <div class="table-responsive">
                                <table class="table table-striped table-condensed">
                                    <tbody>
                                    {%  for key, k in equipe.keywordsEquipe%}
                                        <tr>
                                            <td class="text-left">
                                                {{ k.keyword }}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="panel panel-default panel-primary">
                        <a class="aNews" role="button" data-toggle="collapse" data-parent="#equipeAccordion" href="#collapseThree" aria-expanded="true" aria-controls="collapseThree">
                            <div class="panel-heading panelHeading" role="tab" id="headingTwo">
                                <div class="panelTop panel-title text-center">Publications</div>
                            </div>
                        </a>
                        <div id="collapseThree" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingThree">
                            <div class="table-responsive">
                                <table class="table table-striped table-condensed">
                                    <tbody>
                                        {% for publication in equipe.equipePublication %}
                                            <tr>
                                                <td class="text-left">
                                                    <a class="aNews" href="{{ publication.lien }}" data-toggle="tooltip" data-placement="right" title="{{ publication.titre }}" target="_blank"> {{ publication.doi }}</a>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-8 col-lg-8">
            <div class="col-lg-12 equipeDetailTitle">
                <h1>{{ equipe.nomEquipe }}</h1>
            </div>
            <div class="col-lg-12 equipeDetailResume">
                <p>{{ equipe.descriptionequipe | raw }}</p>
            </div>
        </div>
    </div>
</div>
{% endblock %}