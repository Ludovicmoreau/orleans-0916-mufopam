{% extends 'base.html.twig' %}

{% block contenu  %}
    <div class="equipeDetail">
        <div class="row">
            <div class="col-md-4 col-lg-4 actuDetailDate">
                <div class="panel-group" id="actuAccordion" role="tablist" aria-multiselectable="true">
                    <div class="panelCustom panel panel-default panel-primary">
                        <a class="aNews" role="button" data-toggle="collapse" data-parent="#actuAccordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                            <div class="panel-heading panelHeading" role="tab">
                                <div class="panelTop panel-title text-center">Détail de l'actualité N° {{ fluxes.id }}</div>
                            </div>
                        </a>
                        <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
                            <div class="table-responsive">
                                <table class="table table-striped table-condensed">
                                    <tbody>
                                    <tr>
                                        <td>
                                            Date de parution {{ fluxes.datePublication | date('d-m-Y')}}
                                        </td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="panelCustom panel panel-default panel-primary">
                        <a class="aNews" role="button" data-toggle="collapse" data-parent="#actuAccordion" href="#collapseTwo" aria-expanded="true" aria-controls="collapseTwo">
                            <div class="panel-heading panelHeading" role="tab">
                                <div class="panelTop panel-title text-center">Mots clés</div>
                            </div>
                        </a>
                        <div id="collapseTwo" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingTwo">
                            <div class="table-responsive">
                                <table class="table table-striped table-condensed">
                                    <tbody>
                                        {%  for key, k in fluxes.keywordsFlux%}
                                            <tr>
                                                <td class="text-left">
                                                    {{ k.keyword }}
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8 col-lg-8">
                <div class="col-lg-12 equipeDetailTitle">
                    <h1>{{ fluxes.titre }}</h1>
                </div>
                <div class="col-lg-12 equipeDetailResume actuContent">
                    <p>{{ fluxes.contenu | raw }}</p>
                </div>
            </div>
        </div>
    </div>
{%  endblock  %}