{% trans_default_domain 'FOSUserBundle' %}

<div class="container well text-center">
    <form action="{{ path("fos_user_security_check") }}" method="post">
        <div class="row">
            {% if error %}
                <div class="col-lg-offset-2 col-lg-8 alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
        </div>
        <div class="row">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}
            <div class="col-lg-offset-4 col-lg-4 text-left loginLabel">
                <label for="username">{{ 'security.login.username'|trans }}</label>
            </div>
            <div class="col-lg-12">
                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="votre nom de connexion"/>
            </div>
            <div class="col-lg-offset-4 col-lg-4 text-left loginLabel">
                <label for="password">{{ 'security.login.password'|trans }}</label>
            </div>
            <div class="col-lg-12">
                <input type="password" id="password" name="_password" required="required" placeholder="votre mot de passe"/>
            </div>
            <div class="col-lg-12">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
            </div>
            <div class="col-lg-offset-4 col-lg-4">
                <input class="btn btn-lg btn-default btnForm" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
            </div>
            <div  class="col-lg-offset-4 col-lg-4">
                <a href="{{ path('fos_user_resetting_request') }}">Mot de passe oubli√© ?</a>
            </div>
        </div>
    </form>
</div>